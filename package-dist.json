{
	"name": "danti",
	"description": "DANTi Display Prototype",
	"author": "Paolo Masci",
	"license": "NASA-1.3",
	"version": "2.0.0",
	"repository": {
		"type": "git",
		"url": "https://shemesh.larc.nasa.gov/fm/DANTi/"
	},
	"publisher": "paolomasci",
	"categories": [],
	"scripts": {
		"tsc": "tsc",
		"watch": "tsc -b -w",
		"danti": "electron ./main.js",
		"connect-testbed2danti": "node danti-connect/connect-testbed2danti.js",
		"testbed": "node danti-connect/connect-testbed2danti.js",
		"connect-xplane2danti": "node danti-connect/connect-xplane2danti.js",
		"xplane": "node danti-connect/connect-xplane2danti.js",
		"stream": "node danti-connect/stream-scenario2danti.js $@",
		"pack": "electron-builder --dir",
		"dist": "electron-builder"
	},
	"dependencies": {
		"animate.css": "^4.1.1",
		"backbone": "^1.4.0",
		"bootstrap": "^4.3.1",
		"express": "^4.16.4",
		"font-awesome": "^4.7.0",
		"handlebars": "^4.7.7",
		"jquery": "^3.5.1",
		"leaflet": "^1.7.1",
		"node": "^18.0.0",
		"requirejs": "^2.3.6",
		"underscore": "^1.13.1",
		"ws": "^8.2.3"
	},
	"devDependencies": {
		"@types/backbone": "^1.3.42",
		"@types/express": "^4.16.1",
		"@types/jquery": "^3.3.38",
		"@types/leaflet": "^1.7.9",
		"@types/node": "^18.16.3",
		"@types/ws": "^8.2.0",
		"electron": "^24.1.3",
		"electron-builder": "^24.3.0",
		"electron-webpack": "^2.8.2",
		"typescript": "^5.2.2",
		"webpack": "^4.42.1"
	},
	"build": {
		"appId": "gov.nasa.danti-display",
		"copyright": "NASA-1.3",
		"asar": false,
		"directories": {
			"output": "pack"
		},
		"mac": {
			"category": "public.app-category.developer-tools"
		},
		"linux": {
			"category": "Development"
		},
		"nodeVersion": "14.18.1",
		"files": [
			{
				"from": "dist/",
				"to": "./",
				"filter": [
					"**/*"
				]
			}
		]
	}
}
